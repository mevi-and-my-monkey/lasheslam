    <!--Input Layout , EditText, Spinner Style-->

    <style name="InputLayoutRHD" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="android:textColorHint">@color/colorGray3</item>
        <item name="boxStrokeColor">@color/selector_state_focused</item>
        <item name="boxStrokeErrorColor">@color/colorFucsia3</item>
        <item name="errorIconTint">@color/colorFucsia3</item>
        <item name="errorTextColor">@color/colorFucsia3</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorEnabled">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="EditText" parent="Text16W400H24">
        <item name="android:maxLines">1</item>
    </style>

    <style name="Button" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:lineHeight" tools:targetApi="p">20sp</item>
        <item name="android:lineSpacingExtra">-2sp</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:textSize">16sp</item>
    </style>

